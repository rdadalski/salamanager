{
  "expo": {
    "name": "SalaManager",
    "slug": "SalaManager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "your-app-scheme",
    "backgroundColor": "#ccc",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain"
    },
    "plugins": [
      "expo-notifications",
      {
        "color": "#ffffff",
        "androidMode": "default",
        "androidCollapsedTitle": "Updates from SalaManager",
        "iosDisplayInForeground": true
      }
    ],
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#ffffff",
      "iosDisplayInForeground": true
    }
  }
}
